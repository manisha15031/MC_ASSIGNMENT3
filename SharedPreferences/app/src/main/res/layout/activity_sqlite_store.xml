<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.sharedpreferences.SQLiteStore">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to SQLite Store"
        android:id="@+id/textView_sqlite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ff4081"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_sqname"
        android:width="250dp"
        android:hint="Enter your Name"
        android:layout_below="@+id/textView_sqlite"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Data"
        android:id="@+id/button_insert"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/editText_id"
        android:layout_alignEnd="@+id/button_update" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve Data"
        android:layout_marginBottom="20dp"
        android:id="@+id/button_retreive"
        android:layout_above="@+id/button_delete"
        android:layout_alignEnd="@+id/textView_sqlite" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:layout_marginTop="20dp"
        android:id="@+id/button_update"
        android:layout_below="@+id/button_insert"
        android:layout_alignStart="@+id/textView_sqlite" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Data"

        android:id="@+id/button_delete"
        android:layout_alignTop="@+id/button_update"
        android:layout_alignStart="@+id/button_retreive" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_native"
        android:width="250dp"
        android:hint="Enter your Native Place"
        android:layout_below="@+id/editText_sqname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_id"
        android:width="250dp"
        android:hint="Enter the uniqueID"
        android:layout_below="@+id/editText_native"
        android:layout_alignStart="@+id/editText_native" />


</RelativeLayout>
